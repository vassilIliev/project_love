# ============================================
# datememaybe.net — Environment Variables
# ============================================
# Copy this file to .env.local for local development:
#   cp .env.example .env.local
#
# For production (Vercel), add these in:
#   Vercel Dashboard → Settings → Environment Variables
# ============================================

# Stripe Secret Key
# - Test mode: starts with sk_test_
# - Production: starts with sk_live_
STRIPE_SECRET_KEY=sk_test_your_key_here

# Your app's public URL (no trailing slash)
# - Local dev: http://localhost:3000
# - Production: https://datememaybe.net
APP_URL=http://localhost:3000

# Secret for signing invitation URL tokens (HMAC-SHA256)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# WARNING: NEVER change this after going live — all existing invitation links will break!
INVITATION_SECRET=change-me-to-a-random-secret

# (Optional) Pre-created Stripe Price ID
# If not set, the app creates prices dynamically per checkout session
# STRIPE_PRICE_ID=price_xxx
